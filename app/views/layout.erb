<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

  <title>FlatironSchool</title>

  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <link rel="stylesheet" href="/stylesheets/main.css" />
</head>
<body>
  <!-- Here is where my nav links will go   -->
  <div class="navbar">

    <% if logged_in? %>
      <!-- Links I should see if I'm logged in -->
      <!-- homepage -->
      <a href="/instructors/<%= current_user.id %>">Home</a>
      <!-- log out  -->
      <a href="/logout">Log Out</a>
      <!-- Only show if logged in -->
      <a href="/instructors">All Instructors</a>
      <a href="/courses">All Courses</a>
    <% else %>
      <!-- Links I should see if I'm not logged in -->

      <!-- log in -->
      <a href="/login">Log In</a>
      <!-- sign up - NOT BUILT YET -->
      <a href="/signup">No Account? Sign Up!</a>

    <% end %>

  </div>
  <div class="wrapper">

    <%= yield %>

    <footer class="branding">
      <small>&copy; 2018 <strong>FlatironSchool</strong></small>
    </footer>
  </div>

  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
