<% if @course.errors.any? %>
  <h2 class="error-message"><%= @course.errors.full_messages.to_sentence %></h2>
<% end %>

<!-- where do name, description, and instructor go? -->
<form action="/courses/<%= @course.id %>" method="post">
  <input type="hidden" name="_method" value="patch">

  <label for="name">Course Name</label>

  <input type="text" name="name" value="<%= @course.name %>" /><br>
  <label for="description">Description</label>
  <input type="text" name="description" value="<%= @course.description %>"><br>
  <input type="submit" name="" value="Update Course"><br>
</form>

<form action="/courses/<%= @course.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="submit" name="" value="Delete this course">
</form>


